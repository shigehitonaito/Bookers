

<main>
  <h1>Books</h1>
    <table>
     <thead>
      <tr>
       <th>Title</th>
       <th>Body</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
      <% @books.each do |book| %>
     <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", book_path(book)%></td>
      <td><%= link_to "Edit", edit_book_path(book)%></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
     </tr>
     <%end%>
     </tbody>
   </table>
  <div class="main-new">
    <h1 class="new-headline">New book</h1>
    <%= form_for(@book) do |f| %>

    <% if @book.errors.any? %>
      <div class="alert alert-warning">
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

      <p>Title</p>
      <%= f.text_field :title %>
      <p>body</p>
      <%= f.text_area :body %>
      <br>
      <%= f.submit 'Create Book' %>
    <%end%>
  </div>
</main>

