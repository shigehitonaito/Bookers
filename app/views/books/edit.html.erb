
<div class="edit-content">
<h1>Editing Book</h1>
<% if flash[:book] %>
    <div class="flash">
      <%= flash[:book] %>
    </div>
  <% end %>
<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <p>Title</p>
  <%= f.text_field :title %>
  <p>body</p>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<%end%>
<%= link_to "Show",book_path(@book.id) %>
<%= link_to "Back", books_path %>
</div>
